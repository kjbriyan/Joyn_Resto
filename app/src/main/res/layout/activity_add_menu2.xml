<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:layout_height="match_parent"
    tools:context=".activity.menu.AddMenuActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Menu"
        android:maxLines="1"
        android:id="@+id/et_nama_menu"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Desc Menu"
        android:maxLines="2"
        android:id="@+id/et_desc_menu"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stok"
        android:maxLines="1"
        android:inputType="number"
        android:id="@+id/et_stok_menu" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Menu"
        android:inputType="number"
        android:maxLines="1"
        android:id="@+id/et_harga_menu"/>

    <Button
        android:id="@+id/btn_add_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Menu"
        android:padding="@dimen/_8sdp"/>
    <Button
        android:id="@+id/btn_update_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Menu"
        android:padding="@dimen/_8sdp"/>
    <Button
        android:id="@+id/btn_delete_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Menu"
        android:padding="@dimen/_8sdp"/>


</LinearLayout>